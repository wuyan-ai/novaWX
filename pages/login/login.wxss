/* pages/login/login.wxss */

.login-form {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: stretch;
  justify-content: center;
  background:#fff;
  margin-top: 330rpx
}

.input-group {
  display: flex;
  align-items: center;
  padding: 25rpx 10rpx;
  /* margin: 40rpx 3%; */
  margin: auto auto 3% auto;
  background: #ffffff;
  transition: all .25s ease-in-out;
  width: 65%;
}
.input-group.active {
  border: 2px solid ;
  color: rgb(67, 206, 203);
}
/*输入框*/
.nameImage, .keyImage {
  margin-left: 2%;
  padding-right:1% ;
  width: 14px;
  height: 14px
}

.input-label {
  color: rgb(67, 206, 203);
  font-size: 11pt;
  height: 20rpx;
  line-height: 25rpx;
  padding: 0 25rpx;
}
.input-group input,
.input-group picker {
  flex: 1;
  font-size: 11pt;
  min-height: 52rpx;
  height: 52rpx;
  line-height: 52rpx;
  padding: 0 25rpx;
}

.btn1 {
  margin-top: 80rpx;
  background-color: rgb(67, 206, 203);
  color: #fff;
  width: 60%;
  font-size:small;
  border-radius: 15rpx;
  width: 50%;
}
.inputtext{
  width: 100%;
  border-bottom: 1px solid gray;
}