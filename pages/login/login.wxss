/* pages/login/login.wxss */

.login-form {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: stretch;
  justify-content: center;
  background:#fff;
  margin-top: 330rpx
}

.input-group {
  display: flex;
  align-items: center;
  padding: 25rpx 10rpx;
  /* margin: 40rpx 3%; */
  margin: auto auto 3% auto;
  background:rgb(250, 246, 246);
  border-radius: 5px;
  border: 2px solid #f4f4f4;
  transition: all .25s ease-in-out;
  width: 65%;
}
.input-group.active {
  border: 2px solid #7acfa6;
}
/*输入框*/
.nameImage, .keyImage {
  margin-left: 5%;
  padding-right:5% ;
  width: 14px;
  height: 14px
}

.input-label {
  color: #888;
  font-size: 13pt;
  height: 25rpx;
  line-height: 25rpx;
  padding: 0 25rpx;
  border-right: 1px solid #d8d8d8; 
}
.input-group input,
.input-group picker {
  flex: 1;
  font-size: 11pt;
  min-height: 52rpx;
  height: 52rpx;
  line-height: 52rpx;
  padding: 0 25rpx;
}

.btn1 {
  margin-top: 80rpx;
  background-color: #f4f4f4;
  color: rgb(143, 136, 136);
  border-radius: 98rpx; 
}