<view class="container">
    <view class="main_machine">
      <view class="machine_img">
        <cover-image class="img" src="{{firstMachine.imgSrc}}" mode="aspectFit"></cover-image>
        <view class="machineName">当前设备：{{firstMachine.machine_name}}</view>
      </view>
      <view class="blank"></view>
      <view class="machineDetailContainer">
          <view class="machineDetail">设备ID：{{firstMachine.machineID}}</view>
          <view class="blank"></view>
          <view class="machineDetail">设备状态：{{firstMachine.machineStatus}}</view>
          <view class="blank"></view>
          <view class="machineDetail">更新时间：{{firstMachine.machineUpdateTime}}</view>
      </view>
      <view class="blank"></view>
      <button class="button" bindtap="navigatoionBack">查看设备数据</button>  
    </view>
    <view class="son_machine">
      <view class="machine_img_item" wx:for="{{otherMachineList}}" wx:key="item">
        <cover-image class="img_item" src="{{item.imgSrc}}" mode="aspectFit"></cover-image>
        <view class="machineName_item">当前设备：{{item.machine_name}}</view>
      </view>
    </view>  

</view>