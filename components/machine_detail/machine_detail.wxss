.container{
  width: 100%;
  height: 90vh;
  margin-top: 15rpx;
}
.main_machine{
  width: 100%;
  height: 30%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.machine_img{
  width: 50%;
  height: 50%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.img{
  width: 60%;
  height: 80%;
}
.machineName{
  font-size: 25rpx;
  color:rgb(67, 206, 203);
  padding-left: 10%;
  margin-top: 10rpx;
}
.machineDetailContainer{
  width: 90%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction:column;
  
}
.machineDetail{
  font-size: 20rpx;
  margin-top:3rpx;
  color: rgb(156 155 155);
}
.blank{
  height: 5%;
  width: 10%;
}
.service{
  font-size: 45rpx;
  color: #000000;
  font-family:SimHei;   /* 黑体 */
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top:70rpx;
  margin-bottom: 40rpx;
}
.button{
   padding: 0;
    margin-top: 10rpx;
    color: white;
    background-color: rgb(67, 206, 203);
    font-size: 20rpx;
    padding-left: 1%;
    padding-right: 1%;
}
.son_machine{
  width: 100%;
  height: 70%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  align-content: baseline;
}
.machine_img_item{
  width: 40%;
  height:20%;
  padding: 5%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;

}
.img_item{
  width: 45%;
  height: 55%;
}
.machineName_item{
  font-size: 20rpx;
  color:rgb(156 155 155);
}


