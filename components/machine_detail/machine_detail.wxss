.container{
  width: 100%;
  height: 100vh;
  padding: 0;
  background-color: black;
}
.main_machine{
  width: 100%;
  height: 30%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.machine_img{
  width: 50%;
  height: 50%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.img{
  width: 60%;
  height: 80%;
}
.machineName{
  font-size: 25rpx;
  color:rgb(67, 206, 203);
  padding-left: 10%;
}
.machineDetailContainer{
  width: 90%;
  display: flex;
  flex-direction:row;
}
.machineDetail{
  font-size: 20rpx;
  color: rgb(156 155 155);
}
.blank{
  height: 7%;
  width: 10%;
}
.button{
   padding: 0;
    margin: 0;
    color: white;
    background-color: rgb(67, 206, 203);
    font-size: 20rpx;
    padding-left: 1%;
    padding-right: 1%;
}
.son_machine{
  width: 100%;
  height: 70%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  align-content: baseline;
}
.machine_img_item{
  width: 40%;
  height:20%;
  padding: 5%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;

}
.img_item{
  width: 45%;
  height: 50%;
}
.machineName_item{
  font-size: 20rpx;
  color:rgb(156 155 155);
}

