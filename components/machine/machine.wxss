.container{
  width: 100%;
  height: 90vh;
}
.chartView{
  margin-top: 0rpx;
  width: 100%;
  height: 45%;
  background-color:#ffffff;
}
.info{
  display: flex;
  flex-direction: column;
  height: 18%;
}
.lineCanvs{
  height: 82%;
}
.yeild{
  color: rgb(69,192,192);
  margin-left: 5%;
}
.date{
  font-size: 25rpx;
  margin-left: 5%;
  color:#777;
}
.machine{
  width: 100%;
  height: 45%;
  margin-bottom:0rpx ;
}

.swiper-tab {  
  display: flex;  
  flex-direction: row;  
  line-height: 80rpx;  
  /* border-bottom: 2rpx solid #777;   */
}  
.tab-item {  
  width: 33.3%;  
  text-align: center;  
  font-size: 15;  
  /* background-color: rgb(232,232,232); */
  color:rgb(155,158,161);
  border:#ffffff;  
} 
.swiper {  
  background: #ffffff;  
}  
.on {  
  /* color: rgb(82,196,196);   */
  color:#000000;
  border-bottom: 5rpx solid rgb(82,196,196); 
  margin-left: 1%;
  margin-right: 1%; 
  font-weight: 550;
} 

.machine_status{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: row;
}
.machine_img{
  width: 50%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.img{
  width: 50%;
  height: 25%;
}

.machine_name{
  background-color: rgb(232,232,232);
  border-radius: 15rpx;
  font-size: small;
  width: fit-content;
}
.machine_info{
  width: 50%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center
}
.blank{
  height: 3%;
}
.machine_detail{
  background-color: rgb(232,232,232);
  border-radius: 15rpx;
  font-size: small;
  width: 90%;
}
