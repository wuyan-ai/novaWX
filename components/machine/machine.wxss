.container{
  width: 100%;
  height: 82vh;
}
.chartView{
  margin-top: 0rpx;
  width: 100%;
  height: 50%;
  background-color:#ffffff;
}
.machine{
  width: 100%;
  height: 42%;
  margin-bottom:0rpx ;
}

.swiper-tab {  
  display: flex;  
  flex-direction: row;  
  line-height: 80rpx;  
  border-bottom: 2rpx solid #777;  
}  
.tab-item {  
  width: 33.3%;  
  text-align: center;  
  font-size: 15;  
  color: #000000;  
  background-color: rgb(232,232,232);
  border: #ffffff;

}  
.swiper {  
  background: #ffffff;  
}  
.on {  
  color: rgb(82,196,196);  
  border-bottom: 5rpx solid rgb(82,196,196);  
} 

.machine_status{
  width: 100%;
  height: 100%;
}
.machine_img{
  width: 50%;
  height: 100%;
  float: left;
  margin: 0;
}
.img{
  margin-top:45% ;
  width: 50%;
  height: 30%;
  margin-left: 25%;
}

.machine_name{
  background-color: rgb(232,232,232);
  border-radius: 15rpx;
  font-size: small;
  width: fit-content;
  height: 6%;
  padding: 1% 1% 0% 5%;
  margin-left: 25%;
}
.machine_info{
  margin: auto;
  width: 50%;
  height: 100%;
  float: right;
}
.blank{
  height: 20%;
}
.machine_detail{
  background-color: rgb(232,232,232);
  border-radius: 15rpx;
  font-size: small;
  width: 80%;
  height: 6%;
  padding: 1% 1% 0% 5%;
  margin-top: 5%;
}

.mt20 {
  margin-top: 20rpx;
}
.list-item {
  height: 60rpx;
  line-height: 60rpx;
  text-indent: 30rpx;
}