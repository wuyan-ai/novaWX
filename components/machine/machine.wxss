.container{
  width: 100%;
  height: 80vh;
  margin-top: 10vh;
  margin-bottom: 10vh;
  padding: 0;
}
.chartView{
  margin-top: 0rpx;
  width: 100%;
  height: 45%;
  background-color:#ffffff;
}
.machine{
  width: 100%;
  height: 55%;
  margin-bottom:0rpx ;
}

.swiper-tab {  
  display: flex;  
  flex-direction: row;  
  line-height: 80rpx;  
  border-bottom: 2rpx solid #777;  
}  
.tab-item {  
  width: 33.3%;  
  text-align: center;  
  font-size: 15;  
  color: #000000;  
  background-color: rgb(232,232,232);
  border: #ffffff;

}  
.swiper {  
  background: #ffffff;  
}  
.on {  
  color: rgb(82,196,196);  
  border-bottom: 5rpx solid rgb(82,196,196);  
} 

.machine_status{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: row;
}
.machine_img{
  width: 50%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.img{
  width: 50%;
  height: 25%;
}

.machine_name{
  background-color: rgb(232,232,232);
  border-radius: 15rpx;
  font-size: small;
  width: fit-content;
}
.machine_info{
  width: 50%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center
}
.blank{
  height: 3%;
}
.machine_detail{
  background-color: rgb(232,232,232);
  border-radius: 15rpx;
  font-size: small;
  width: 90%;
}
.canvas{
  width: 100%;
  height: 100%;
}